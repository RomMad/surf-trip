{% set headers = [
    ['title.label'|trans, 't.title'],
    ['location.label'|trans, 't.location'],
    ['start_at.label'|trans, 't.startAt'],
    ['end_at.label'|trans, 't.endAt'],
    'required_levels.label'|trans,
    'description.label'|trans,
    ['created_at.label'|trans, 't.createdAt'],
    'actions.label'|trans,
 ] %}

{% set data = trips|map(trip => [
    trip.title,
    trip.location,
    trip.startAt|date('Y-m-d'),
    trip.endAt|date('Y-m-d'),
    trip.requiredLevels|map(rl => rl.label|trans),
    trip.description|u.truncate(120, 'â€¦', false),
    trip.createdAt|date('Y-m-d'),
    {raw: include('components/Trip/IndexActionsCell.html.twig', {trip: trip})},
]) %}

<twig:DataTable :headers="headers" :data="data" />
