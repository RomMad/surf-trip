{% extends 'base.html.twig' %}

{% set title = 'trip.label'|trans %}

{% block body %}
    <twig:Heading1 :title="title" />
    <twig:Trip:ShowTable :trip="trip" />

    <div class="flex flex-wrap items-center gap-2">
        <twig:Button as="a" href="{{ path('app.trip.edit', {id: trip.id}) }}" class="mb-4">
            <twig:ux:icon name="lucide:edit-2" />
            {{- 'edit.label'|trans -}}
        </twig:Button>
        <twig:Trip:Form:Delete :trip="trip" />
        <twig:Trip:BackToIndexButton />
    </div>
{% endblock %}
