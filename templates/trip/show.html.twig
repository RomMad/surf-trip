{% extends 'base.html.twig' %}

{% set title = 'trip.label'|trans %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'title.label'|trans }}</th>
                <td>{{ trip.title }}</td>
            </tr>
            <tr>
                <th>{{ 'location.label'|trans }}</th>
                <td>{{ trip.location }}</td>
            </tr>
            <tr>
                <th>{{ 'start_at.label'|trans }}</th>
                <td>{{ trip.startAt|date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th>{{ 'end_at.label'|trans }}</th>
                <td>{{ trip.endAt|date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th>{{ 'required_levels.label'|trans }}</th>
                <td>{{ trip.requiredLevels|map(rl => rl.label|trans)|join(', ') }}</td>
            </tr>
            <tr>
                <th>{{ 'description.label'|trans }}</th>
                <td>{{ trip.description }}</td>
            </tr>
            <tr>
                <th>{{ 'created_at.label'|trans }}</th>
                <td>{{ trip.createdAt|date('Y-m-d H:i') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.trip.index') }}">
        {{- 'back_to_list.label'|trans -}}
    </a>
    <a href="{{ path('app.trip.edit', {id: trip.id}) }}">
        {{- 'edit.label'|trans -}}
    </a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
