{% extends 'base.html.twig' %}

{% set title = 'trips.label'|trans %}

{% block body %}
    <twig:Heading1 :title="title" />

    <twig:Trip:Form:Filter :form="form" />

    {% block trip_results %}
        <turbo-frame id="trip_results">
            <twig:Trip:IndexTable :trips="pager" />
            <twig:AppPagination :pager="pager" />
        </turbo-frame>
    {% endblock %}

    <twig:Button as="a" href="{{ path('app.trip.new') }}">
        <twig:ux:icon name="lucide:plus" />
        {{- 'create_new.label'|trans -}}
    </twig:Button>
{% endblock %}
